<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/semantic")
    @Scripts.Render("~/bundles/modernizr")
    <style>
    </style>
</head>
<body>
    <div class="ui fixed inverted menu" style="height:65px">
        <div class="ui container">
            @Html.ActionLink("MMM", "Index", "Home", null, new { @class = "header item" })
            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "item" })
            @Html.ActionLink("Movies", "Index", "Movies", null, new { @class = "item" })
            @Html.ActionLink("People", "Index", "Person", null, new { @class = "item" })
            <div class="right menu">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="ui main container">
        @RenderBody()
    </div>
    <div class="ui inverted vertical footer segment">
        <div class="ui center aligned container">
            <p>&copy; @DateTime.Now.Year - Mega Media Manager</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/semantic")
    @RenderSection("scripts", required: false)
</body>
</html>